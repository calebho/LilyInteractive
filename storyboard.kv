#:kivy 1.9.1

<Button, Label>:
  font_size: dp(36)

<BubbleButton>:
  font_size: dp(24)

<edit_menu>:
  BubbleButton:
    text: 'New story node'

<StoryLabel>:
  canvas.before:
    Color:
      rgba: 1, 1, 1, 1
    Rectangle:
      size: self.size
  
  size: self.parent.size
  color: 0, 0, 0, 1
  text: 'text'

<StoryNode>:
  size_hint: 0, 0
  size: 100, 40
  StoryLabel

<HomeScreen>:
  BoxLayout:
    orientation: 'vertical'

    Button:
      text: 'Create a new story'
    Button:
      text: 'Edit an existing story'
      on_press: root.manager.current = 'edit'
    Button:
      text: 'Quit'

<EditScreen>:
  BoxLayout:
    size_hint: 1, 0.1
    pos_hint: {'x': 0, 'y': .9}
    
    Button:
      text: 'Home'
      on_press: root.manager.current = 'home'
    Button:
      text: 'Save'
  
  Board:
    size_hint: 1, 0.9
